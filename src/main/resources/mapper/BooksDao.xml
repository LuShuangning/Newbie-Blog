<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.cuit.lsn.dao.BooksDao">

	<select id="querryBookByName" resultType="Books" parameterType="String">
		select * from books
		where book_name = #{bookName};
	</select>
	
	<select id="querryBookWithType" resultType="Books" parameterType="String">
		select * from books
		where book_type = #{category}
	</select>

</mapper>